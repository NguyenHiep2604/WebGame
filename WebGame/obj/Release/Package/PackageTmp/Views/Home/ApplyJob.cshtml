@{
    ViewBag.Title = "ApplyJob";
    Layout = "~/Views/Shared/_LayoutDetailsJobs.cshtml";
}
<style>
    .application-label, .application-field {
        display: inline-block;
    }

    input {
        border-radius: 3px;
        border-width: 1px;
        border-style: solid;
        height: 40px;
        padding: 4px 4px 4px 15px;
        float: right;
    }

        input[type=checkbox] {
            position: absolute;
            left: 10px;
            top: -2px;
            width: 20px;
            height: 20px;
            border: 1px solid #e2e2e2;
        }
</style>

<script>
    var verifyCallback = function (response) {
        $("#btnSendEmail").prop('disabled', false)
    };

    var onloadCallback = function (e) {
        grecaptcha.render('g-recaptcha', {
            'sitekey': '6LdW0eMZAAAAAA_ChuxSBzEkchiA_POWCU2PATfC',
            'callback': verifyCallback,
            'theme': 'dark'
        });
    };
</script>

<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
        async defer></script>

<div class="content">
    <div class="section-wrapper accent-section small-accent page-full-width">
        <div class="section page-centered posting-header">
            <h2>@ViewBag.Vacancies</h2>
            <div class="posting-categories">
                <div href="#" class="sort-by-time posting-category medium-category-label">@ViewBag.Location /</div>
                <div href="#" class="sort-by-team posting-category medium-category-label">Lion Studios – @ViewBag.Team /</div>
                <div href="#" class="sort-by-commitment posting-category medium-category-label">Full-time</div>
            </div>
        </div>
    </div>
    <div class="section-wrapper page-full-width">
        <form enctype="multipart/form-data" method="POST">
            <div class="section page-centered application-form">
                <h4>Submit your application</h4>
                @* Full name *@
                <div class="fullName" style="margin-bottom:30px">
                    <label class="col-sm-4">Full name</label>
                    <input class="col-sm-8 form-control" id="FullName" type="text" name="name" required style="width: 489px; display: inline-block" />
                </div>
                @* Email *@
                <div class="email" style="margin-bottom:30px">
                    <label class="col-sm-4">Email</label>
                    <input class="col-sm-8 form-control" id="Email" type="text" name="email" required style="width: 489px; display: inline-block" />
                </div>
                @* Phone *@
                <div class="phone" style="margin-bottom:30px">
                    <label class="col-sm-4">Phone</label>
                    <input class="col-sm-8 form-control" id="Phone" type="text" name="phone" required style="width: 489px; display: inline-block" />
                </div>
                @* Current company *@
                <div class="currentCompany" style="margin-bottom:30px">
                    <label class="col-sm-4">Current company</label>
                    <input class="col-sm-8 form-control" id="CurrentCompany" type="text" name="currentCompany" required style="width: 489px; display: inline-block" />
                </div>
                @* File CV *@
                <div class="fileCV" style="margin-bottom:30px">
                    <label class="col-sm-4">Resume/CV</label>
                    <input class="col-sm-8 form-control" id="CV" type="file" name="fileCV" accept="application/pdf" required style="width: 300px; display: inline-block" />
                </div>
            </div>
            <div class="section page-centered application-form">
                <h4>Links</h4>
                @* LinkedIn URL *@
                <div class="linkedInURL" style="margin-bottom:30px">
                    <label class="col-sm-4">LinkedIn URL</label>
                    <input class="col-sm-8 form-control" id="LinkedInURL" type="text" name="linkedInURL" required style="width: 489px; display: inline-block" />
                </div>
                @* Twitter URL *@
                <div class="twitterURL" style="margin-bottom:30px">
                    <label class="col-sm-4">Twitter URL</label>
                    <input class="col-sm-8 form-control" id="TwitterURL" type="text" name="twitterURL" required style="width: 489px; display: inline-block" />
                </div>
                @* Github URL *@
                <div class="githubURL" style="margin-bottom:30px">
                    <label class="col-sm-4">Github URL</label>
                    <input class="col-sm-8 form-control" id="GithubURL" type="text" name="githubURL" required style="width: 489px; display: inline-block" />
                </div>
                @* Portfolio URL *@
                <div class="portfolioURL" style="margin-bottom:30px">
                    <label class="col-sm-4">Portfolio URL</label>
                    <input class="col-sm-8 form-control" id="PortfolioURL" type="text" name="portfolioURL" required style="width: 489px; display: inline-block" />
                </div>
                @* Other website *@
                <div class="otherWebsite" style="margin-bottom:30px">
                    <label class="col-sm-4">Other website</label>
                    <input class="col-sm-8 form-control" id="OtherWebsite" type="text" name="otherWebsite" required style="width: 489px; display: inline-block" />
                </div>
            </div>
            <div class="section page-centered application-form">
                <label for="additional-information">
                    <h4>Additional information</h4>
                </label>
                <div class="application-additional">
                    <textarea placeholder="Add a cover letter or anything else you want to share." name="comments" class="more" id="additional-information" style="padding-top: 10px; resize: vertical; width: 100%; height: 130px;"></textarea>
                </div>
            </div>
            <div class="section page-centered application-form" data-qa="consent-section">
                <hr>
                <ul>
                    <li class="application-question" style="list-style-type: none">
                        <div class="application-field full-width" style="padding-left: 0; width: 100%;">
                            <ul>
                                <li style="list-style-type: none">
                                    <label style="padding-left: 40px; position: relative; cursor: pointer;">
                                        <input type="hidden" name="consent[marketing]" value="0">
                                        <input type="checkbox" name="consent[marketing]" value="1">
                                        <p class="application-answer-alternative" style="display:inline">
                                            Yes, AppLovin can contact me about future job opportunities for up to 6 months<br>
                                            <a href="https://www.applovin.com/privacy/" target="_blank" class="link">
                                                <small>Privacy policy</small>
                                            </a>
                                        </p>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
            <div id="g-recaptcha" class="g-recaptcha"></div>
            <div class="section page-centered application-form last-section-apply">
                <button class="postings-btn template-btn-submit hex-color" id="submitApplyJob">Submit application</button>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/applyJob.js"></script>
